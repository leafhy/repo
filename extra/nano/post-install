cat <<EOF
### Nano Syntax Highlighting ###

NOTE:
     system-wide settings /etc/nanorc

     user-specific settings ~/.nanorc
                            ~/.config/nano/nanorc

# Enable specific highlighting
echo 'include /usr/share/nano/sh.nanorc' > ~/.nanorc

# Enable All highlighting
echo 'include /usr/share/nano/*.nanorc' > ~/.nanorc

EOF
