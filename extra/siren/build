#!/bin/sh -e

sed '43s/444/755/' Makefile > _
mv -f _ Makefile

./configure \
      prefix=/usr \
      bindir=/usr/bin \
      mandir=/usr/share/man \
      plugindir=/usr/lib/siren \
      debug=no \
      aac=yes \
      mad=no \
      sndio=yes \
      ffmpeg=yes \
      mpg123=yes \
      flac=yes \
      opus=yes \
      sndfile=yes \
      vorbis=yes \
      wavpack=yes \
      sun=no \
      oss=no \
      ao=no \
      portaudio=no \
      pulse=no \
      alsa=no
      
 make
 make install
