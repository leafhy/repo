#!/bin/sh -e

patch -p1 < 14-Fix-g++-warning.patch

cp makefile.linux_amd64_asm makefile.machine

sed 's+OPTFLAGS=-O -s+OPTFLAGS=-O3 -march=native -Wno-narrowing+' makefile.machine > _
mv -f _ makefile.machine

sed 's+DEST_HOME=/usr/local+DEST_HOME=/usr+' install.sh > _
mv -f _ install.sh

make all3
make DESTDIR="$1" install
