#!/bin/sh -e
  
./configure \
        --prefix=/usr \
        --with-boot-install=no \
        --with-docdir=/usr/doc \
        --localstatedir=/var \
        --mandir=/usr/man \
        --sysconfdir=/etc
        
 make
 make install

install -vdm755 /etc/cron.{hourly,daily,weekly,monthly}
install -m640 files/systab.orig /var/spool/fcron/
install -m755 files/run-parts /usr/bin

# Install runit services.
mkdir -p "$1/etc/sv/fcron"
cp -f fcron.run "$1/etc/sv/fcron/run"
ln -sf /etc/sv/fcron /run/runit/
