#!/bin/sh -e

# Remove incorrect bash dependency.
sed 's/bash/sh/' install-sh > _
mv -f _ install-sh

chmod +x install-sh

./configure \
    --prefix=/usr \
    --sbindir=/bin \
    --enable-lib64=no \
    --disable-gettext \
    --enable-lto \
    --enable-editline=yes

make DEBUG=-DNDEBUG

make \
DIST_ROOT="$1" \
PKG_ROOT_SBIN_DIR=/usr/bin \
PKG_ROOT_LIB_DIR=/lib \
install \
install-dev
