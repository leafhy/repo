#!/bin/sh -e

./Configure \
    --prefix=/usr \
    --openssldir=/etc/ssl \
    --libdir=lib \
    no-unit-test \
    shared \
    linux-x86_64

make depend
make

make DESTDIR="$1" \
     install_sw \
     install_ssldirs

# The make option 'install_man_docs' installs around 10MB of docs.

cp -f update-certdata.sh "$1/etc/ssl"

# Libretls is LibreSSL's libtls library for OpenSSL.
(
    cd libretls

    ./configure \
        --prefix=/usr \
        --with-openssl="$1/usr"

    make
    make install
)

# Remove libretls docs.
rm -rf "$1/usr/share"

